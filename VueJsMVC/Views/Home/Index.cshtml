<div class="people-div">
    <button class="btn btn-primary" v-on:click="addPerson">Add Person</button>
    <table class="table table-hover table-striped table-bordered">
        <tr>
            <th>First Name</th>
            <th>Last Name
                <button v-on:click="sortPeople">
                    <span class="glyphicon" v-bind:class="[sortLastNameAsc ? 'glyphicon-chevron-down' : 'glyphicon-chevron-up']"></span>
                </button>
            </th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
        <template v-for="person in people">
            <tr>
                <td>{{person.FirstName}}</td>
                <td>{{person.LastName}}</td>
                <td>{{person.Age}}</td>
                <td>
                    <button class="btn btn-danger" v-on:click="deletePerson(person.Id)">Delete</button>
                    <button class="btn btn-warning" style="margin-left: 20px;" v-on:click="editPerson(person)">Edit</button>
                </td>
            </tr>
        </template>
    </table>

    <div class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control" placeholder="First Name" v-model="person.FirstName"/>
                    <br/>
                    <input type="text" class="form-control" placeholder="Last Name" v-model="person.LastName"/>
                    <br/>
                    <input type="text" class="form-control" placeholder="Age" v-model="person.Age" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" v-on:click="editPersonSave" v-if="editMode">Update Person</button>
                    <button type="button" class="btn btn-primary" v-on:click="addPersonSave" v-else>Add Person</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
@section scripts {

    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/app.js"></script>
}